{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    //"strict": true,
    "strictPropertyInitialization": false,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "files": [
    "./vue-shims.d.ts"
  ],
  "include": [
    "resources/js/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
